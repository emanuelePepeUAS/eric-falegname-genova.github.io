source "https://rubygems.org"

# GitHub Pages gem - include tutte le dipendenze compatibili
gem "github-pages", group: :jekyll_plugins

# Plugin aggiuntivi per SEO e sitemap
gem "jekyll-seo-tag"
gem "jekyll-sitemap"
gem "jekyll-feed"

# Webrick per Ruby 3.x (necessario per il server locale)
gem "webrick"

# Remote theme support
gem "jekyll-remote-theme"
gem "jekyll-include-cache"
gem "jekyll-archives"

